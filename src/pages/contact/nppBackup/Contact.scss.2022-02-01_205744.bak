.contact{
text-align: center;
background-image: url("../../resources/img/about2.png");
background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  display: block;
}

.form h1 {
color: gold; 
font-family: Lucida Handwriting;
text-align: center;
font-size: 50px;

  

}
.form{
  position: relative;

background: rgba(0, 0, 0, 0.75);
  padding: 40px;
  padding-top: 20px;
  color:#f4f7f6;
  border: 2px dotted white;
  border-radius: 15px;
}

form input {
  width: 300px;
  margin: 5px;
  padding:5px;
  border-radius: 5px;
  border: 1px solid #1eb57e;
  font-family: cursive;
}

#submit{
  font-weight: 700;
  width: 85px ;
  cursor: pointer;
  color: gold;
  background-color: grey;
}