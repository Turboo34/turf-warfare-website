.about{
display: block;
		background-image: url("../../resources/img/about.png"); /* source "https://mocah.org/540574-trenches-video.html" */
		background-position: center;
		background-repeat: no-repeat;
		height: 120%;
		width: 100%;
		}


.about h1 {
color: white; 
font-family: Lucida Handwriting;
text-align: center;
font-size: 5vw;
  font-size: 5vh
  

}
.about h2 {
color: gold;

}

.about .container{
  margin: auto;
  width: 60%;
  padding: 10px;
  text-align: center;
   background-color: #474e5d;
    color: white;
	 margin-bottom: 16px;
	 background: rgba(0, 0, 0, 0.65);
	 border-radius: 15px;
	
  }


.about .button {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  background-color: #494944;
  text-align: center;
  cursor: pointer;
 
  font-weight: bold;
}
.about .button:hover {
   box-shadow: rgb(64, 189, 249) 0px -4px 0px inset;
   color: rgb(64, 189, 249);
      }








