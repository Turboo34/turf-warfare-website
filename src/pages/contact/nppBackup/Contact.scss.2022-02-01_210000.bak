.contact{
text-align: center;
background-image: url("../../resources/img/about2.png");
background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  display: block;
}

.form h1 {
color: gold; 
font-family: Lucida Handwriting;
text-align: center;
font-size: 50px;

  

}
.form{
  margin: auto;
  width: 50%;
  padding: 10px;
  text-align: center;
   background-color: #474e5d;
    color: white;
	 margin-bottom: 16px;
	 background: rgba(0, 0, 0, 0.65);
	 border-radius: 15px;
}

form input {
  width: 300px;
  margin: 5px;
  padding:5px;
  border-radius: 5px;
  border: 1px solid #1eb57e;
  font-family: cursive;
}

#submit{
  font-weight: 700;
  width: 85px ;
  cursor: pointer;
  color: gold;
  background-color: grey;
}