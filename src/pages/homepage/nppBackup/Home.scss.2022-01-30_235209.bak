
	
	

		

		.play-wrapper {
			text-shadow: none;
			display: flex;
			justify-content: center;
			align-items: center;
			.play-button {
				margin: 30px;
				text-decoration: none;
				color: #f9f9f9;
				font-weight: 800;
				letter-spacing: 0.1em;
				border-radius: 2px;
				line-height: 16px;
				padding: 12px 0;
				background-color: rgb(64, 189, 249);
				min-width: 229px;
				max-width: 320px;
				font-size: 14px;
				text-overflow: ellipsis;
				text-align: center;
				vertical-align: middle;
				text-transform: uppercase;
			}
		}
	}

